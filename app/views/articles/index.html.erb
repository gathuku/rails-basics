<h3>Listing all Articles </h3>
<br>
<%= link_to 'New article', new_article_path %>
<br>
<table>
  <thead>
    <th>ID</th>
    <th>Title</th>
    <th>Text</th>
    <th></th>

  </thead>
  <tbody>
   <% @articles.each do |article| %>
      <tr>
      <td><%= article.id%></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      </tr>
    <%end%>

  </tbody>
</table>
